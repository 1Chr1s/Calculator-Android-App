<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


        <TextView
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:gravity="right"
            android:hint="0"
            />

        <Button
            android:id="@+id/first_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/screen"
            android:layout_alignParentLeft="true"
            android:text="@string/one"
            android:onClick="@string/one"
            />

        <Button
            android:id="@+id/second_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/screen"
            android:layout_toRightOf="@id/first_button"
            android:text="@string/two"
            android:onClick="@string/two"
            />

        <Button
            android:id="@+id/third_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/screen"
            android:layout_toRightOf="@id/second_button"
            android:text="@string/three"
            android:onClick="@string/three"
            />

        <Button
            android:id="@+id/add_button"
            android:layout_width="87dp"
            android:layout_height="50dp"
            android:layout_below="@id/screen"
            android:layout_toRightOf="@id/third_button"
            android:text="@string/add"
            android:onClick="@string/add"
            />


        <Button
            android:id="@+id/fourth_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/first_button"
            android:layout_alignParentLeft="true"
            android:text="@string/four"
            android:onClick="@string/four"
            />

        <Button
            android:id="@+id/fifth_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/second_button"
            android:layout_toRightOf="@id/fourth_button"
            android:text="@string/five"
            android:onClick="@string/five"
            />

        <Button
            android:id="@+id/sixth_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/third_button"
            android:layout_toRightOf="@id/fifth_button"
            android:text="@string/six"
            android:onClick="@string/six"
            />

        <Button
                android:id="@+id/subtract_button"
                android:layout_width="87dp"
                android:layout_height="50dp"
                android:layout_below="@id/add_button"
                android:layout_toRightOf="@id/third_button"
                android:text="@string/subtract"
                android:onClick="@string/subtract"
            />

        <Button
            android:id="@+id/seventh_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/fourth_button"
            android:text="@string/seven"
            android:onClick="@string/seven"
            />

        <Button
            android:id="@+id/eighth_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/seventh_button"
            android:layout_below="@id/fifth_button"
            android:text="@string/eight"
            android:onClick="@string/eight"
            />

        <Button
            android:id="@+id/nineth_button"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_below="@id/sixth_button"
            android:layout_toRightOf="@id/eighth_button"
            android:text="@string/nine"
            android:onClick="@string/nine"
            />

        <Button
            android:id="@+id/multiply_button"
            android:layout_width="87dp"
            android:layout_height="50dp"
            android:layout_below="@id/subtract_button"
            android:layout_toRightOf="@id/sixth_button"
            android:text="@string/multiply"
            android:onClick="@string/multiply"
            />

        <Button
            android:id="@+id/divide_button"
            android:layout_width="87dp"
            android:layout_height="50dp"
            android:layout_below="@id/multiply_button"
            android:layout_toRightOf="@id/sixth_button"
            android:text="@string/divide"
            android:onClick="@string/divide"
            />

        <Button
            android:id="@+id/equals_button"
            android:layout_width="88dp"
            android:layout_height="100dp"
            android:layout_below="@id/divide_button"
            android:layout_toRightOf="@id/nineth_button"
            android:text="@string/equals"
            android:onClick="@string/equals"
            />


</RelativeLayout>